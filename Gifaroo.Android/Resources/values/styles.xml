<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<color name="dark_blue">#ff202020</color>

	<style name="Theme.GifarooTheme" parent="android:Theme.Holo">
		<item name="android:windowBackground">@color/dark_blue</item>
		<item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:attr/actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:attr/actionBarTabBarStyle">@style/MyActionBarTabs</item>
        <item name="android:attr/actionBarTabTextStyle">@style/MyActionBarTabsText</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/gifarooactionbarbackground</item>
        <item name="android:logo">@drawable/gifaroologomobileheader</item>
        <item name="android:icon">@drawable/inappicon</item>
    </style>
	<!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="android:Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item></style>
	<style name="MyActionBarTabsText"
           parent="android:Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>